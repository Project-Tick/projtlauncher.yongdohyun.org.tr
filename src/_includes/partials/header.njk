<header>
  <div class="bg"></div>
  <nav class="container">
    <div class="navbar">
      <a class="home" href="{{ '/' | url }}" aria-label="ProjT Launcher">
        <picture>
          <source srcset="/img/logo-text-darkmode.svg" media="(prefers-color-scheme: dark)">
          <img src="/img/logo-text.svg" alt="ProjT Launcher logo" style="height: 4em; width: 12em" />
        </picture>
      </a>
      <ul class="main-menu">
        {%- for entry in collections.nav | eleventyNavigation %}
        <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}">
          <a href="{{ entry.url | url }}">{{ entry.title }}</a>
        </li>
        {%- endfor %}
      </ul>
    </div>
    <div class="links">
      <div class="social-links">
        <a href="https://github.com/Project-Tick/ProjT-Launcher" target="_blank" aria-label="GitHub"><i class="fa fa-github"></i></a>
        <a href="mailto:froster12@naver.com" target="_blank" aria-label="Email"><i class="fa fa-envelope-square"></i></a>
        <a href="https://matrix.to/#/#projtlauncher:matrix.org" target="_blank" aria-label="Matrix"><i class="fa fa-matrix-org"></i></a>
      </div>
      <div>
        <a class="button" href="{{ '/download/?from=button' | url }}">Download</a>
      </div>
    </div>
  </nav>

  {% if hero %}
  <div class="hero-body">
    <div class="row container">
      <div class="column">
        <div class="hero-description">
          <h1 class="hero-title">{{ hero.title }}</h1>
          <p class="subtitle">{{ hero.description }}</p>
          {%- if hero.button %}
          <br>
          <a class="button size-large" href="{{ hero.button.url | url }}">{{ hero.button.content }}</a>
          {%- endif %}
        </div>
      </div>
      {%- if hero.image %}
      <div class="column">
        <img src="{{ hero.image.light }}" alt="{{ hero.title }}" style="max-width: 100%; height: auto;">
      </div>
      {%- endif %}
    </div>
  </div>
  {% endif %}
</header>
